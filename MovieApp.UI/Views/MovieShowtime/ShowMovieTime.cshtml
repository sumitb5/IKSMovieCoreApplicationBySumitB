@model IEnumerable<MovieApp.Entity.MovieShowtimeModel>
@{
    ViewData["Title"] = "ShowMovieTime";
}

<h1>ShowMovieTime</h1>

<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ShowId</th>
            <th>MovieId</th>
            <th>TheatreId</th>
            <th>ShowTime</th>
            <th>Date</th>
            <th>Edit</th>
            <th>delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ShowId</td>
                <td>@item.MovieId</td>
                <td>@item.TheatreId</td>
                <td>@item.ShowTime</td>
                <td>@item.Date</td>
                <td><a asp-action="UpdateMovieshowTimes" asp-controller="MovieShowtime" asp-route-ShowId=@item.ShowId>Edit</a></td>
                <td><a asp-action="DeleteMovieshowTimes" asp-controller="MovieShowtime" asp-route-ShowId=@item.ShowId>Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="InsertMovieShowTimes" asp-controller="MovieShowTime" class="btn btn-primary">Add-New-Show-Time</a>
</div>